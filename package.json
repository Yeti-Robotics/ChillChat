{
  "name": "chillchat",
  "version": "1.0.0",
  "description": "A Discord modmail bot with anonymous messaging capabilities",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "mongo:up": "docker compose -f docker-compose.yml up -d",
    "dev": "ts-node src/index.ts",
    "watch": "tsc -w",
    "deploy-commands": "ts-node src/commands.ts"
  },
  "dependencies": {
    "discord.js": "^14.18.0",
    "dotenv": "^16.4.7",
    "mongoose": "^8.13.1"
  },
  "devDependencies": {
    "@types/node": "^20.17.28",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}